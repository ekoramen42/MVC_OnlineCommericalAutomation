@using MVC_OnlineCommericalAutomation.Models.Sınıflar
@model List<Personel>
@{

    ViewBag.Title = "DepartmanDetat";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Persoel ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.Personelid</td>
        <td>@x.PersonelAd</td>
        <td>@x.PersonelSoyad</td>
        <td>@x.PersonelGorsel</td>
        <td><a href="/Departman/DepartmanPersonelSatıs/@x.Personelid" class="btn btn-default" style="background-color:cornflowerblue">Satışlar</a></td>
    </tr>
    }
</table>

